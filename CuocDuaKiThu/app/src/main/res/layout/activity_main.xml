<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mot"
        android:layout_above="@+id/hai"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hai"
        android:layout_above="@+id/ba"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ba"
        android:layout_centerVertical="true"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mot"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="9dp"
        android:layout_toRightOf="@+id/mot"
        android:id="@+id/seek1"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/hai"
        android:id="@+id/seek2"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek2"
        android:layout_toRightOf="@+id/ba"
        android:layout_marginTop="15dp"
        android:id="@+id/seek3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="80dp"
        android:id="@+id/diem"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="59dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_action_name"
        android:id="@+id/nut"
        />
</RelativeLayout>