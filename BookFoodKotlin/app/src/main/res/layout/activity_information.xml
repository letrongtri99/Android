<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityInformation"
>
    <ImageView android:layout_width="match_parent"
               android:layout_height="280dp"
               android:id="@+id/imgPicture"
        />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@color/colorApp"
                  android:layout_below="@+id/imgPicture"
                  android:id="@+id/thongtingia"
            >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:id="@+id/txtPrice"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:textSize="30dp"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:id="@+id/txtdonvi"
        />
    </LinearLayout>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20dp"
              android:id="@+id/txtTenRieng"
              android:layout_below="@+id/thongtingia"
    />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20dp"
              android:id="@+id/txtMTa"
              android:layout_below="@+id/txtTenRieng"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Chỉnh Sửa"
            android:background="@color/colorApp"
            android:id="@+id/btnRepair"
            android:layout_alignParentBottom="true"
    />
</RelativeLayout>